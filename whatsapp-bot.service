[Unit]
Description=WhatsApp Bot (Flask)
After=network.target

[Service]
WorkingDirectory=/opt/whatsapp-bot
EnvironmentFile=/etc/whatsapp-bot.env
ExecStart=/opt/whatsapp-bot/venv/bin/gunicorn app:app --chdir /opt/whatsapp-bot --bind 0.0.0.0:5000 --workers 3 --access-logfile - --error-logfile - --capture-output --log-level info
Restart=always

[Install]
WantedBy=multi-user.target
